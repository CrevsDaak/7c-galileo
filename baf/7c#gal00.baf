IF
	!GlobalTimerNotExpired("7C#SpellCast","LOCALS")
	Global("7C#GalileoInParty","GLOBAL",5)
	Allegiance(Myself,ENEMY)
	See(Player1)
	!StateCheck(Player1,STATE_NOT_VISIBLE)
	CheckStatLT(Myself,50,SPELLFAILUREMAGE)
	HaveSpell(WIZARD_GLITTERDUST)
	NumInPartyGT(2)
	Range(Player1,20)
	OR(3)
		Range(Player2,30)
		Range(Player5,30)
		NumInPartyLT(2)
	OR(3)
		Range(Player3,30)
		Range(Player4,30)
		NumInPartyLT(3)
THEN
	RESPONSE #100
		SetGlobalTimer("7C#SpellCast","LOCALS",ONE_ROUND)
		Spell(Player1,WIZARD_GLITTERDUST)
END

