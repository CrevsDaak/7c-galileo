	Allegiance(Myself,ENEMY)
	See(Player1)
	!StateCheck(Player1,STATE_NOT_VISIBLE)
	CheckStatLT(Myself,50,SPELLFAILUREMAGE)
	HaveSpell(WIZARD_GLITTERDUST)
	NumInPartyGT(2)
	Range(Player1,30)
	!Range(Player1,10)
