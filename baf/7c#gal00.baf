IF
	Global("7C#GalileoInParty","GLOBAL",5)
	Allegiance(Myself,ENEMY)
	See([PC])
	Range([PC],5)
	CheckStatLT([PC],50,RESISTSLASHING)
	StateCheck(Myself,STATE_MIRRORIMAGE)
	!HPPercentLT(Myself,65)
THEN
	RESPONSE #100
		EquipMostDamagingMelee()
		AttackReevaluate([PC],TWO_ROUNDS)
END