  Allegiance(Myself, ENEMY)
  StateCheck(Myself, STATE_INVISIBLE)
  See([PC.0.0.DRUID])
  CheckStatGT([PC.0.0.DRUID], -3, ARMORCLASS)
  !StateCheck([PC.0.0.DRUID], STATE_MIRRORIMAGE)
  Range([PC.0.0.DRUID], 15)
THEN
  RESPONSE #100
    MoveToObject([PC.0.0.BARD])
    Backstab([PC.0.0.BARD])
