  See([PC.0.0.BARD])
  CheckStatGT([PC.0.0.BARD], -1, ARMORCLASS)
  !StateCheck([PC.0.0.BARD], STATE_NOT_VISIBLE)
  !StateCheck([PC.0.0.BARD], STATE_MIRRORIMAGE)
  Range([PC.0.0.BARD], 5)
