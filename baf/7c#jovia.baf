IF
  Allegiance(Myself, ENEMY)
  !StateCheck(Myself, STATE_INVISIBLE)
  See([PC.0.0.DRUID])
  !StateCheck([PC.0.0.DRUID], STATE_NOT_VISIBLE)
  Range([PC.0.0.DRUID], 5)
THEN
  RESPONSE #100
    AttackOneRound([PC.0.0.DRUID])
